@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model Product
@{
    ViewData["Title"] = Localizer["تعديل المنتج"];
    var categories = ViewBag.Categories as IEnumerable<Category>;
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm border-0" style="border-radius:15px;">
            <div class="card-header fw-bold bg-white border-bottom-0 pt-4 px-4">
                <h4 class="mb-0"><i class="fas fa-edit me-2 text-warning"></i> @Localizer["تعديل المنتج"]</h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CreatedAt" />
                    <input type="hidden" asp-for="ImageUrl" />

                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label fw-semibold">@Localizer["اسم المنتج"]</label>
                                <input asp-for="Name" class="form-control rounded-pill px-3" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="SKU" class="form-label fw-semibold">@Localizer["SKU"]</label>
                                <input asp-for="SKU" class="form-control rounded-pill px-3" />
                                <span asp-validation-for="SKU" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-semibold">@Localizer["الوصف"]</label>
                        <textarea asp-for="Description" class="form-control" rows="3" style="border-radius:15px;"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="row align-items-center mb-3">
                        <div class="col-md-9">
                            <label class="form-label fw-semibold">@Localizer["تغيير الصورة"]</label>
                            <input type="file" name="productImage" class="form-control" />
                        </div>
                        <div class="col-md-3 text-center">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" class="img-thumbnail" style="max-height:100px;" />
                            }
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Price" class="form-label fw-semibold">@Localizer["السعر"]</label>
                                <div class="input-group">
                                    <input asp-for="Price" class="form-control rounded-start-pill ps-3" type="number" step="0.01" />
                                    <span class="input-group-text rounded-end-pill pe-3">@Localizer["ج.م"]</span>
                                </div>
                                <span asp-validation-for="Price" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="StockQuantity" class="form-label fw-semibold">@Localizer["الكمية"]</label>
                                <input asp-for="StockQuantity" class="form-control rounded-pill px-3" type="number"  step="1"/>
                                <span asp-validation-for="StockQuantity" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="CategoryId" class="form-label fw-semibold">@Localizer["الفئة"]</label>
                                <select asp-for="CategoryId" class="form-select rounded-pill px-3" asp-items="@(new SelectList(categories, "Id", "Name"))">
                                    <option value="">-- @Localizer["اختر الفئة"] --</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-4 mt-2">
                        <div class="form-check form-switch px-5">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch">
                            <label asp-for="IsActive" class="form-check-label fw-semibold"> @Localizer["منتج نشط"] </label>
                        </div>
                    </div>

                    <div class="d-flex gap-2 pt-3">
                        <button type="submit" class="btn btn-warning rounded-pill px-5 fw-bold text-white">
                            <i class="fas fa-save me-1"></i> @Localizer["حفظ التعديلات"]
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">@Localizer["إلغاء"]</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
