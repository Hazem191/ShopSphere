@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model Category
@{
    ViewData["Title"] = Localizer["تعديل الفئة"];
}

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card shadow-sm border-0" style="border-radius:15px;">
            <div class="card-header fw-bold bg-white border-bottom-0 pt-4 px-4">
                <h4 class="mb-0"><i class="fas fa-edit me-2 text-warning"></i> @Localizer["تعديل الفئة"]</h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <div class="mb-4">
                        <label asp-for="Name" class="form-label fw-semibold">@Localizer["اسم الفئة"]</label>
                        <input asp-for="Name" class="form-control rounded-pill px-3" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-warning text-white fw-bold rounded-pill px-4">
                            <i class="fas fa-save me-1"></i> @Localizer["حفظ التعديلات"]
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">@Localizer["إلغاء"]</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
