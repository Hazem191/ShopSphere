@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model List<Order>
@{
    ViewData["Title"] = Localizer["طلباتي"];
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="section-title mb-0"><i class="fas fa-box me-2"></i> @Localizer["طلباتي"]</h2>
    <a asp-controller="Catalog" asp-action="Index" class="btn btn-primary rounded-pill px-4 shadow-sm border-0">
        <i class="fas fa-plus me-2"></i> @Localizer["طلب جديد"]
    </a>
</div>

@if (!Model.Any())
{
    <div class="text-center py-5 text-muted">
        <i class="fas fa-inbox fa-4x mb-3 d-block opacity-50"></i>
        <h5>@Localizer["لا توجد طلبات بعد"]</h5>
        <a asp-controller="Catalog" asp-action="Index" class="btn btn-primary mt-2 rounded-pill px-4">@Localizer["ابدأ التسوق"]</a>
    </div>
}
else
{
    <div class="card shadow-sm border-0" style="border-radius:15px;">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">@Localizer["رقم الطلب"]</th>
                            <th>@Localizer["التاريخ"]</th>
                            <th class="text-center">@Localizer["الإجمالي"]</th>
                            <th class="text-center">@Localizer["الحالة"]</th>
                            <th class="text-center pe-4">@Localizer["التفاصيل"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var o in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-primary">@o.OrderNumber</td>
                                <td class="text-muted">@o.CreatedAt.ToString("dd/MM/yyyy")</td>
                                <td class="text-center fw-bold">@o.TotalAmount.ToString("N2") @Localizer["ج.م"]</td>
                                <td class="text-center">
                                    @{
                                        var badgeClass = o.Status switch {
                                            "Pending"   => "bg-warning text-dark",
                                            "Confirmed" => "bg-info text-white",
                                            "Shipped"   => "bg-primary",
                                            "Delivered" => "bg-success",
                                            "Cancelled" => "bg-danger",
                                            _           => "bg-secondary"
                                        };
                                        // Localization for status is better handled via Localizer directly using the status key
                                    }
                                    <span class="badge @badgeClass rounded-pill px-3">@Localizer[o.Status]</span>
                                </td>
                                <td class="text-center pe-4">
                                    <a asp-action="Details" asp-route-id="@o.Id"
                                       class="btn btn-outline-primary btn-sm rounded-pill px-3">
                                        <i class="fas fa-eye me-1"></i> @Localizer["عرض"]
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
